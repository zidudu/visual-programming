
#include <iostream>
using namespace std;

class Circle {
private:
	int radius;
public:
	//생성자
	Circle();
	Circle(int r);
	//소멸자
	~Circle();
	//원 면적 함수
	double getArea() { return 3.14 * radius * radius; }
	//접근자
	int getRadius() { return radius; }
	//설정자
	void setRadius(int radius) { this->radius = radius; }
};
Circle::Circle() { //매개변수 없는 생성자
	radius = 1;
	cout << "생성자 실행 radius = " << radius << endl;

}
Circle::Circle(int radius) { //매개변수 있는 생성자
	this->radius = radius;
	cout << "생성자 실행 radius = " << radius << endl;
}
Circle::~Circle() { //소멸자
	cout << "소멸자 실행  radius = " << radius << endl;
}
void increase(Circle c) { //객체를 매개변수로 받는 함수
	int r = c.getRadius(); //접근자 함수 값이 r변ㅅ 반지름 값에 들어감
	cout << "increase 값 :"<<r << endl;
	c.setRadius(r + 1); //설정자함수에 매개변수+1을 하여 circle 클래스에 넣음
	//즉 반지름은 31이 되고 그 값이 radius 멤버 변수에 들어감
}
int main()
{
	Circle waffle(30); //매개변수 있는 객체 생성
	increase(waffle); // 객체를 매개변수로 받는 함수를 호출 객체의 주소를 받음
	cout << waffle.getRadius() << endl; // 





}

